<!DOCTYPE html>
<html>
  <head>
    <title>SessionLogin</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
     <header>
        <nav class="navbar navbar-default">
        	<div class="container-fluid">
        		<div class="navbar-header">
        			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        				<span class="sr-only">Toggle navigation</span>
        				<span class="icon-bar"></span>
        				<span class="icon-bar"></span>
        				<span class="icon-bar"></span>
        			</button>
              <%= link_to 'InstagramClone', instagrams_path , class:'navbar-brand' %>
        		</div>

        		<div class="collapse navbar-collapse" id="navbarEexample7">
        			<ul class="nav navbar-nav">
                <li>
                    <% if current_user.present? %>
                      <%= link_to current_user.name, user_path(current_user.id)%>
                    <% end %>
                </li>
        			</ul>
              <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to "お気に入りページ", favorite_users_path %>
                </li>
                <li>
                  <% if logged_in? %>
                    <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
                  <% else %>
                    <%= link_to "ログイン", new_session_path %>
                  <% end %>
                </li>
              </ul>
        		</div>
        	</div>
        </nav>
      </header>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
          <%= yield %>
    <footer class="footer">
     <div class="container">
       <p class="text-muted">@suzuki</p>
     </div>
    </footer>
  </body>
 </html>
